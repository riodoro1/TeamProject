<UserControl x:Class="Scope.Controls.SignalDisplayInfoBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Scope.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="300"
             Background="White">
    <Grid>
        <StackPanel Orientation="Horizontal" Height="20">
            <Label x:Name="TimePerDivision" FontFamily="Consolas" FontSize="9">1.0µs/div</Label>

            <Label x:Name="DeltaTime" FontFamily="Consolas" FontSize="9"></Label>
            <Label x:Name="InverseDeltaTime" FontFamily="Consolas" FontSize="9"></Label>

            <Label x:Name="Amplitude" FontFamily="Consolas" FontSize="9"></Label>
        </StackPanel>
    </Grid>
</UserControl>
