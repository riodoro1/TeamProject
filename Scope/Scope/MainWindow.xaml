<Window x:Class="Scope.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Scope"
        xmlns:controls="clr-namespace:Scope.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="500" MinHeight="200" MinWidth="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <controls:SignalDisplay Grid.Row="0" x:Name="SignalDisplay" />
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button Click="Button_Click">Generate trace 1</Button>
            <Button Click="Button2_Click">Generate trace 2</Button>
        </StackPanel>
    </Grid>
</Window>
